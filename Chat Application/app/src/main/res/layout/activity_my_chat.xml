<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.venkatesh.hw07.MyChat">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:text="Medium Text"
            android:id="@+id/mychattvfullname" />

    </TableRow>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:id="@+id/mychatlist"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">

        <EditText
            android:layout_marginTop="18dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/mychatettext" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mychatbtnsend"
            android:src="@mipmap/send" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mychatbtngallery"
            android:src="@mipmap/gallery" />
    </TableRow>

</LinearLayout>
